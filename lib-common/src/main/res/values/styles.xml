<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--<attr name="dayNightBackground" format="color|reference" />-->
    <!--<attr name="dayNightOneTextColor" format="color|reference" />-->
    <!--<attr name="dayNightTwoTextColor" format="color|reference" />-->
    <!--<attr name="dayNightThreeTextColor" format="color|reference" />-->
    <!--<attr name="dayNightBackgroundDrawable" format="color|reference" />-->

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/night_one_text_color</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="dayNightBackground">@color/day_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/day_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/day_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/day_three_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/day_backgroup_color</item>
    </style>
    <!--冷启动界面-->
    <style name="AppTheme_Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--白天主题，此处直接和AppTheme一样-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/night_one_text_color</item>

        <item name="dayNightBackground">@color/day_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/day_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/day_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/day_three_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/day_backgroup_color</item>
    </style>
    <!--夜间主题-->
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/night_backgroup_color</item>
        <item name="colorPrimaryDark">@color/night_backgroup_color</item>
        <item name="colorAccent">@color/night_backgroup_color</item>

        <item name="dayNightBackground">@color/night_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/night_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/night_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/night_there_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/night_there_text_color</item>

    </style>

    <!--窗口淡入淡出动画-->
    <style name="AnimationPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="commondialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="window_bottom_in_bottom_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>

    <!--<style name="main_menu_lefttomiddle" parent="window_left_in" >-->
    <!--<item name="android:windowEnterAnimation">@anim/dialog_in_left</item>-->
    <!--</style>-->
    <style name="window_left_in_left_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_left</item>
    </style>

    <style name="window_left_in_right_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_right</item>
    </style>

    <style name="window_right_in_right_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_right</item>
    </style>
    <style name="window_right_in_left_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_left</item>
    </style>

    <style name="dialog_scale_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out_anim</item>
    </style>

    <style name="window_top_in_top_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_top</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_top</item>
    </style>

    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/loading_bgs2</item>-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0</item>
        <!--窗口背景透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>